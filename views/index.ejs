<%- include('./partials/header') %>

<% if(error.length>0){ %>
  <div class="fixed top-8 left-1/2 -translate-x-1/2 z-50 flex items-center gap-3 px-6 py-3 rounded-xl bg-gradient-to-r from-red-500 to-pink-400 shadow-2xl animate-fade-in">
    <i class="ri-close-circle-fill text-2xl text-white animate-bounce"></i>
    <span class="text-white font-bold text-lg"><%= error %></span>
  </div>
<% } %>
<% if (success.length > 0) { %>
  <div class="fixed top-8 left-1/2 -translate-x-1/2 z-50 flex items-center gap-3 px-6 py-3 rounded-xl bg-gradient-to-r from-green-500 to-blue-400 shadow-2xl animate-fade-in">
    <i class="ri-checkbox-circle-fill text-2xl text-white animate-bounce"></i>
    <span class="text-white font-bold text-lg"><%= success %></span>
  </div>
<% } %>

<div class="relative min-h-screen w-full flex flex-col items-center justify-center py-12 px-2 md:px-0 overflow-hidden">
  <!-- Background image with overlay -->
  <div class="absolute inset-0 z-0">
    <img src="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=1500&q=80" alt="People Carrying Bags and Luggage" class="w-full h-full object-cover object-center" />
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/70 via-yellow-200/40 to-pink-200/60"></div>
  </div>
  <div class="relative z-10 max-w-4xl w-full flex flex-col md:flex-row gap-10 items-center justify-center animate-fade-in">
    <!-- Register Card -->
    <div class="w-full md:w-1/2 bg-white/80 rounded-2xl shadow-2xl p-10 flex flex-col gap-6 border-2 border-blue-100 backdrop-blur-xl">
      <div class="flex flex-col items-center mb-2">
        <img src="https://cdn-icons-png.flaticon.com/512/891/891462.png" alt="Modern Shopping Bag Icon" class="w-16 h-16 mb-2 drop-shadow-lg" />
        <h3 class="text-3xl font-extrabold text-blue-700 flex items-center gap-2"><i class="ri-shopping-bag-3-line text-yellow-400"></i> Welcome to <span class="text-yellow-500">BagWagon</span></h3>
      </div>
      <h4 class="text-xl font-semibold text-blue-600 mb-4 flex items-center gap-2"><i class="ri-shopping-bag-2-line"></i> Create your account</h4>
      <form autocomplete="off" action="/users/register" method="post" class="flex flex-col gap-4">
        <input class="bg-blue-50 border-2 border-blue-100 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition rounded-lg px-4 py-3 font-semibold text-lg" type="text" placeholder="Full Name" name="fullname" required>
        <input class="bg-blue-50 border-2 border-blue-100 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition rounded-lg px-4 py-3 font-semibold text-lg" type="email" placeholder="Email" name="email" required>
        <input class="bg-blue-50 border-2 border-blue-100 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition rounded-lg px-4 py-3 font-semibold text-lg" type="password" placeholder="Password" name="password" required>
        <button type="submit" class="mt-2 px-8 py-3 rounded-full bg-gradient-to-r from-blue-700 to-yellow-400 text-white font-bold shadow-xl hover:shadow-yellow-400/60 hover:scale-105 transition-all duration-200 flex items-center gap-3 text-lg ripple"><i class="ri-shopping-bag-3-line text-2xl"></i> Create My Account</button>
      </form>
    </div>
    <!-- Login Card -->
    <div class="w-full md:w-1/2 bg-white/80 rounded-2xl shadow-2xl p-10 flex flex-col gap-6 border-2 border-yellow-100 backdrop-blur-xl">
      <div class="flex flex-col items-center mb-2">
        <img src="https://cdn-icons-png.flaticon.com/512/891/891419.png" alt="Modern Luggage Icon" class="w-16 h-16 mb-2 drop-shadow-lg" />
        <h4 class="text-xl font-semibold text-yellow-600 flex items-center gap-2"><i class="ri-shopping-bag-2-line"></i> Login to your account</h4>
      </div>
      <form autocomplete="off" action="/users/login" method="post" class="flex flex-col gap-4">
        <input class="bg-yellow-50 border-2 border-yellow-100 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition rounded-lg px-4 py-3 font-semibold text-lg" type="email" placeholder="Email" name="email" required>
        <input class="bg-yellow-50 border-2 border-yellow-100 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition rounded-lg px-4 py-3 font-semibold text-lg" type="password" placeholder="Password" name="password" required>
        <button type="submit" class="mt-2 px-8 py-3 rounded-full bg-gradient-to-r from-yellow-400 to-pink-400 text-white font-bold shadow-xl hover:shadow-pink-400/60 hover:scale-105 transition-all duration-200 flex items-center gap-3 text-lg ripple"><i class="ri-shopping-bag-2-line text-2xl"></i> Login</button>
      </form>
    </div>
  </div>
</div>

<style>
@keyframes fade-in {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fade-in {
  animation: fade-in 0.5s ease;
}
</style>

<%- include('./partials/footer') %>