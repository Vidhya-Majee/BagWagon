<%- include('./partials/header') %>

    <% if(success.length>0){ %>
  <div class="fixed top-8 left-1/2 -translate-x-1/2 z-50 flex items-center gap-3 px-6 py-3 rounded-xl bg-gradient-to-r from-blue-600 to-green-400 shadow-2xl animate-fade-in">
    <i class="ri-checkbox-circle-fill text-2xl text-white animate-bounce"></i>
    <span class="text-white font-bold text-lg"><%= success %></span>
        </div>
        <% } %>

<div class="min-h-screen w-full bg-gradient-to-br from-blue-50 via-yellow-50 to-pink-50 flex flex-col items-center py-12 px-2 md:px-0">
  <div class="max-w-5xl w-full flex flex-col md:flex-row gap-8">
    <!-- Sidebar -->
    <aside class="w-full md:w-1/5 bg-white rounded-2xl shadow-xl p-0 h-fit flex flex-col overflow-hidden border-2 border-blue-200 animate-fade-in">
      <div class="bg-blue-700 px-6 py-5 flex items-center gap-3">
        <i class="ri-dashboard-2-line text-yellow-300 text-2xl"></i>
        <h3 class="text-xl font-extrabold text-white tracking-wide">Admin Panel</h3>
                        </div>
      <ul class="flex flex-col gap-2 p-6 text-base font-semibold text-blue-900">
        <li><a href="/products" class="flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-blue-50 transition"><i class="ri-list-unordered text-blue-500"></i> All Products</a></li>
        <li><a href="/products/create" class="flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-50 text-blue-700 font-bold"><i class="ri-add-box-line text-blue-700"></i> Create Product</a></li>
      </ul>
    </aside>

    <!-- Main Panel -->
    <main class="w-full md:w-4/5 bg-white rounded-2xl shadow-2xl p-10 animate-fade-in flex flex-col gap-8 border-2 border-blue-100">
      <h2 class="text-2xl md:text-3xl font-extrabold text-blue-700 mb-6 flex items-center gap-3"><i class="ri-add-box-line text-yellow-400"></i> Create New Product</h2>
      <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="flex flex-col gap-8">
        <div class="flex flex-col gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-2 text-blue-700 flex items-center gap-2"><i class="ri-information-line"></i> Product Details</h3>
            <div class="mb-4 flex flex-col gap-2">
              <label class="block font-medium text-blue-800">Product Image</label>
              <input name="image" type="file" class="py-3 px-4 rounded-lg border-2 border-blue-200 bg-blue-50 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" value="Select File">
                    </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <input name="name" type="text" placeholder="Product Name" class="border-2 border-blue-100 p-3 rounded-lg w-full focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition font-semibold" required>
              <input name="price" type="text" placeholder="Product Price" class="border-2 border-blue-100 p-3 rounded-lg w-full focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition font-semibold" required>
              <input name="discount" type="text" placeholder="Discount Price" class="border-2 border-blue-100 p-3 rounded-lg w-full focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition font-semibold">
                                </div>
                            </div>
                            <div>
            <h3 class="text-lg font-semibold mb-2 text-blue-700 flex items-center gap-2"><i class="ri-palette-line"></i> Panel Details</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <input name="bgcolor" type="text" placeholder="Background Color" class="border-2 border-yellow-100 p-3 rounded-lg w-full focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition font-semibold">
              <input name="panelcolor" type="text" placeholder="Panel Color" class="border-2 border-yellow-100 p-3 rounded-lg w-full focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition font-semibold">
              <input name="textcolor" type="text" placeholder="Text Color" class="border-2 border-yellow-100 p-3 rounded-lg w-full focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 transition font-semibold">
            </div>
                                </div>
                            </div>
        <button type="submit" class="mt-2 px-8 py-3 rounded-full bg-gradient-to-r from-blue-700 to-yellow-400 text-white font-bold shadow-xl hover:shadow-yellow-400/60 hover:scale-105 transition-all duration-200 flex items-center gap-3 text-lg ripple"><i class="ri-add-circle-line text-2xl"></i> Create New Product</button>
                        </form>
                    </main>
                </div>
            </div>

<style>
@keyframes fade-in {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fade-in {
  animation: fade-in 0.5s ease;
}
</style>

            <%- include('./partials/footer') %>